@model LiteCommerce.DomainModels.Customer
@{

}
    <div class="box box-primary">
        <a href="#" onclick="history.go(-1)" class="btn btn-primary" style="float:right">Back</a>
        <form role="form" action="~/customer/input" method="post">
            <div class="box-body row">
                <input type="hidden" name="method" value="@ViewBag.method"/>
                <div class="col-sm-6">
                    <div class="form-group">

                        <label for="exampleInputEmail1">Customer ID</label>
                        <input name="CustomerID" type="text" class="form-control" id="exampleInputEmail1" placeholder="Customer ID" value="@Model.CustomerID">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Company Name</label>
                        <input name="CompanyName" type="text" class="form-control" id="exampleInputEmail1" placeholder="Company Name" value="@Model.CompanyName">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Contact Name</label>
                        <input name="ContactName" type="text" class="form-control" id="exampleInputEmail1" placeholder="Contact Name" value="@Model.ContactName">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Contact Title</label>
                        <input name="ContactTitle" type="text" class="form-control" id="exampleInputEmail1" placeholder="Contact Title" value="@Model.ContactTitle">
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Address</label>
                        <input name="Address" type="text" class="form-control" id="exampleInputEmail1" placeholder="Address" value="@Model.Address">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Country</label>
                        <select class="form-control" name="Country">
                            <option value="">Choose Country</option>
                            @foreach (var item in SelectListHelper.ListOfCountries())
                            {
                                if (item.CountryName == Model.Country)
                                {
                                    <option value="@item.CountryName" selected>@item.CountryName</option>
                                }
                                else
                                {
                                    <option value="@item.CountryName">@item.CountryName</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">City</label>
                        <input name="City" type="text" class="form-control" id="exampleInputEmail1" placeholder="City" value="@Model.City">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Phone</label>
                        <input name="Phone" type="text" class="form-control" id="exampleInputEmail1" placeholder="Phone" value="@Model.Phone">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Fax</label>
                        <input name="Fax" type="text" class="form-control" id="exampleInputEmail1" placeholder="Fax" value="@Model.Fax">
                    </div>
                </div>
                <div>@Html.ValidationSummary()</div>
            </div>

            <div class="box-footer">
                <button type="submit" class="btn btn-primary">
                    Save <i class="fa fa-floppy-o"></i>
                </button>
                <a href="~/customer" class="btn btn-danger">Cancel</a>
            </div>
        </form>
    </div>

