@{
    WebUserData userData = User.GetUserData();
}
<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="~/Images/@userData.Photo" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>@userData.FullName</p>
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>
        <!-- search form -->
        <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Search...">
                <span class="input-group-btn">
                    <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
        <!-- /.search form -->
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu" data-widget="tree">
            <li class="">
                <a href="~/dashboard">
                    <i class="fa fa-dashboard"></i> <span>Dashboard</span>
                </a>
            </li>

            <li class="treeview">
                <a href="#">
                    <i class="fa fa-tags"></i>
                    <span>Catalog</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li><a href="~/supplier"><i class="fa fa-home"></i> Suppliers</a></li>
                    <li><a href="~/customer"><i class="fa fa-users"></i> Customers</a></li>
                    <li><a href="~/shipper"><i class="fa fa-truck"></i> Shippers</a></li>
                    <li><a href="~/product"><i class="fa fa-leaf"></i> Products</a></li>
                    <li><a href="~/category"><i class="fa fa-tag"></i> Categorys</a></li>
                </ul>
            </li>
            <li class="treeview">
                <a href="~/order">
                    <i class="fa fa-handshake-o"></i>
                    <span>Manage Order</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li><a href="~/order"><i class="fa fa-list-alt"></i> List</a></li>
                    <li><a href="~/order/create"><i class="fa fa-plus-circle"></i> Create</a></li>
                </ul>
            </li>
            <li class="">
                <a href="~/employee">
                    <i class="fa fa-user"></i>
                    <span>Employees</span>
                </a>

            </li>
            <li class="">
                <a href="#">
                    <i class="fa fa-flag"></i>
                    <span>Reports</span>
                </a>

            </li>

        </ul>
    </section>
    <!-- /.sidebar -->
</aside>

